{
   "opts":{
      "tutorials":"Tutorials",
      "destination":"..\\docs",
      "template":"Resources/doctemplate"
   },
   "tags":{
      "allowUnknownTags":true
   },
   "source":{
      "include":[
        "Viewer\\xbim-viewer.js",
        "Viewer\\xbim-state.js",
        "Viewer\\xbim-product-type.js",
		    "Plugins\\NavigationCube\\xbim-navigation-cube.js",
		    "Plugins\\NavigationHome\\xbim-navigation-home.js",
        "Resources/README.md"
      ],
      "includePattern":".+\\.js(doc)?$",
      "excludePattern":"(^|\\/|\\\\)_"
   },
   "plugins":[
      "plugins/markdown"
   ],
   "templates":{
      "cleverLinks":false,
      "monospaceLinks":false,
	  "default": {
            "outputSourceFiles": false
        }
   }
}